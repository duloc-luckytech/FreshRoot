{
  "expo": {
    "name": "FreshRoot",
    "slug": "FreshRoot",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "freshroot",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "LSApplicationQueriesSchemes": [
          "http",
          "https",
          "comgooglemaps"
        ],
        "NSLocationWhenInUseUsageDescription": "Chúng tôi cần vị trí của bạn để tìm cửa hàng lân cận và chỉ đường.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Chúng tôi cần vị trí của bạn để tìm cửa hàng lân cận và chỉ đường ngay cả khi ứng dụng ở chế độ nền.",
        "NSFaceIDUsageDescription": "Cho phép FreshRoot sử dụng Face ID để đăng nhập nhanh chóng và bảo mật."
      }
    },
    "android": {
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE"
      ],
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}